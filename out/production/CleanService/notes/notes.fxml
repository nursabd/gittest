<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="15" style="-fx-background-color: #0993e2;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="notes.NotesController">

    <padding>
        <Insets topRightBottomLeft="15" />
    </padding>
   <Button fx:id="OptionButton" mnemonicParsing="false" prefHeight="31.0" prefWidth="177.0" style="-fx-background-color: #ffffff;" text="Back" textFill="#0993e2" />

    <DatePicker fx:id="picker" />
   <Label text="Cpenguin" textFill="WHITE">
      <font>
         <Font name="SimSun-ExtB" size="20.0" />
      </font>
   </Label>
   <ImageView fitHeight="41.0" fitWidth="63.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../assets/images%20(1).png" />
      </image>
   </ImageView>

    <Button onAction="#updateNotes" text="Update Notes" />

    <TextArea fx:id="notes" prefHeight="269.0" prefWidth="252.0" />

</VBox>
